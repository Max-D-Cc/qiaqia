                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/bianji"
                    />

                <EditText
                    android:id="@+id/et_order_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
