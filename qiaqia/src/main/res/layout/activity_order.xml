<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_order"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.haibin.qiaqia.cart.OrderActivity">
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/app_color"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="订单"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:gravity="center"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back_arrow"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        >
        <ImageView
            android:id="@+id/iv_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/name"
            android:layout_marginLeft="15dp"
            />
        
        <TextView
            android:id="@+id/tv_name"
            android:layout_toRightOf="@id/iv_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="姓名"
            android:textSize="14dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/et_order_nname"
            android:layout_toRightOf="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="请输入您的名字"
            android:layout_marginLeft="25dp"
            android:textSize="14dp"
            />
        <ImageView
            android:id="@+id/iv_name_edit"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:src="@mipmap/bianji"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        >
        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/phone"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_toRightOf="@id/iv_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="电话"
            android:textSize="14dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            />

        <ImageView
            android:id="@+id/iv_phone_edit"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:src="@mipmap/bianji"
            />

        <EditText
            android:id="@+id/et_order_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="请输入您的电话"
            android:textSize="14dp"
           android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/tv_phone"
           />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        >
        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/weizhi"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:id="@+id/tv_location"
            android:layout_toRightOf="@id/iv_location"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="位置"
            android:textSize="14dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/et_order_location"
            android:layout_toRightOf="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="请输入你的收货地址"
            android:layout_marginLeft="25dp"
            android:textSize="14dp"
            />
        <ImageView
            android:id="@+id/iv_location_edit"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:src="@mipmap/bianji"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/gray"
        />
<RelativeLayout
    android:id="@+id/rl_send_time"
    android:layout_width="match_parent"
    android:layout_height="45dp">

    <TextView
        android:id="@+id/tv_send_method"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="立即送出"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="配送时间"
        android:layout_marginLeft="23dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="9dp"
        android:id="@+id/textView5"/>
</RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        />
    <RelativeLayout
        android:id="@+id/rl_beizhu"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="备注"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_add_require"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="请添加要求"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/gray"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="购物车"
        android:gravity="center|left"
        android:layout_marginLeft="15dp"
        >
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        />
  <android.support.v7.widget.RecyclerView
      android:id="@+id/rcv_order_cart"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="15dp"
      >
  </android.support.v7.widget.RecyclerView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/gray"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="配送费"
            android:layout_marginLeft="15dp"
            android:textSize="14dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="￥35元"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/red"
            android:layout_marginRight="15dp"
            />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/gray"
        />
   <RelativeLayout
        android:id="@+id/rl_wxpay"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/iv_weixin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/weixin"

            />
        <TextView
            android:layout_toRightOf="@+id/iv_weixin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="微信支付"
            android:layout_marginLeft="6dp"
            android:gravity="center_vertical"
            />

       <CheckBox

           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:layout_marginRight="14dp"
           android:layout_alignParentTop="true"
           android:layout_alignParentRight="true"
           android:layout_alignParentEnd="true"
           android:layout_marginEnd="14dp"
           android:id="@+id/cb_wxpay"/>
   </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        />

    <RelativeLayout
        android:id="@+id/rl_alipay"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/iv_alipay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/zhifubao"

            />
        <TextView
            android:layout_toRightOf="@+id/iv_alipay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="支付宝支付"
            android:layout_marginLeft="6dp"
            android:gravity="center_vertical"
            />
        <CheckBox
            android:id="@+id/cb_alipay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="45dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="货到付款"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        />

    <TextView
        android:layout_toLeftOf="@+id/cb_send_money"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="需另加2元"
        android:gravity="center"
        />

    <CheckBox
        android:id="@+id/cb_send_money"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="15dp"/>

</RelativeLayout>
</LinearLayout>

</ScrollView>
    <Button
        android:id="@+id/btn_order"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:text="提交订单"
        android:background="@color/app_color"
        />
</RelativeLayout>
