<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="108dp"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/img"
            android:layout_width="70dp"
            android:layout_height="68dp"
            android:layout_gravity="center_vertical"
            android:background="#ffffff"
            android:scaleType="centerCrop"
            android:src="@mipmap/caomei" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            >

            <TextView
                android:layout_marginTop="6dp"
                android:id="@+id/tv_goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:maxEms="9"
                android:singleLine="true"
                android:text="奥利斯酸奶奥利斯酸奶哈哈"
                android:textSize="14dp" />

            <TextView
                android:layout_marginBottom="6dp"
                android:id="@+id/textView2"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="7.00"
                android:textColor="#ef4432"
                android:textSize="14dp" />



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_jian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="3dp"
                    android:src="@mipmap/jianhao_cart" />
                <TextView
                    android:id="@+id/item_mark_num"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="555"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:textColor="@color/textgray"
                    android:gravity="center"
                    android:layout_toRightOf="@+id/img_jian"
                    />
7
                <ImageView
                    android:id="@+id/img_add"
                    android:layout_toRightOf="@+id/item_mark_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="3dp"
                    android:layout_marginRight="5dp"
                    android:src="@mipmap/jiahao_cart" />


                    />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="85dp"
        android:background="@color/app_bg"/>
</LinearLayout>
