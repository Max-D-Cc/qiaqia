<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_fruit_vegetable"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context="com.haibin.qiaqia.fruitvegetables.FruitVegetableActivity"
    >


    <android.support.v4.view.ViewPager
        android:layout_below="@+id/sliding_tab"
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </android.support.v4.view.ViewPager>
    <RelativeLayout
        android:id="@+id/rl_click"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_arrow"/>
    </RelativeLayout>

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/sliding_tab"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/app_color"
        tl:tl_tab_padding="7dp"
        tl:tl_tab_space_equal="true"
        tl:tl_indicator_color="#eeeeee"
        app:tl_textSelectColor="#000000"
        app:tl_textUnselectColor="#000000"
        tl:tl_indicator_style="TRIANGLE"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </com.flyco.tablayout.SlidingTabLayout>


    <RelativeLayout
        android:id="@+id/vf_gocard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginBottom="33dp"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4"
        android:layout_marginStart="27dp">
        <ImageView
            android:id="@+id/gouwudai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/gouwudai"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/gouwuche2"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/gouwudai"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去购物车"
            android:layout_marginLeft="25dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/gouwudai"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/yuan"
            android:layout_marginLeft="36dp"
            android:visibility="gone"
            android:layout_alignParentTop="true"
            />
        <TextView
            android:id="@+id/vf_goodsNum"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:text="5"
            android:gravity="center"
            android:background="@mipmap/yuan"
            android:layout_marginLeft="36dp"
            android:textSize="12sp"
            android:layout_alignParentTop="true"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/vf_back"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:layout_alignParentTop="true"
        android:src="@mipmap/back_arrow"
        android:layout_marginLeft="10dp"
        />

</RelativeLayout>
