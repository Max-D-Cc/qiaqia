<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_height="match_parent">

    <include
        android:id="@+id/tv_title"
        layout="@layout/include_titlebar"/>
<TextView
    android:layout_below="@id/tv_title"
    android:id="@+id/tv_split"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/app_color"
    />
    <ImageView
        android:layout_below="@id/tv_title"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/red"
        android:id="@+id/imageView4" />
    <LinearLayout
        android:layout_below="@id/tv_split"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/market_rv"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:background="@color/transparent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
     <!--   <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/app_bg"/>-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_goods"
            android:layout_width="0dp"
            android:layout_weight="0.75"
            android:background="#ffffff"
            android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_color"
        />

    <RelativeLayout
        android:id="@+id/mark_gocard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginBottom="33dp"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4"
        android:layout_marginStart="27dp">
        <ImageView
            android:id="@+id/gouwudai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/gouwudai"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/gouwuche2"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/gouwudai"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去购物车"
            android:layout_marginLeft="25dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/gouwudai"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/yuan"
            android:layout_marginLeft="36dp"
            android:visibility="gone"
            android:layout_alignParentTop="true"
            />
        <TextView
            android:id="@+id/mark_goodsNum"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:text="5"
            android:gravity="center"
            android:background="@mipmap/yuan"
            android:layout_marginLeft="36dp"
            android:textSize="14sp"
            android:layout_alignParentTop="true"
            />
    </RelativeLayout>
</RelativeLayout>
