<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_myorder"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context="com.haibin.qiaqia.fruitvegetables.FruitVegetableActivity"
    >
    <include
        android:id="@+id/mo_top"
        layout="@layout/include_titlebar"/>
    <android.support.v4.view.ViewPager
        android:layout_below="@+id/msliding_tab"
        android:id="@+id/mvp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </android.support.v4.view.ViewPager>

    <com.flyco.tablayout.SlidingTabLayout
        android:layout_below="@+id/mo_top"
        android:id="@+id/msliding_tab"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#eeeeee"
        tl:tl_tab_padding="7dp"
        tl:tl_tab_space_equal="true"
        tl:tl_indicator_color="@color/app_color"
        app:tl_textSelectColor="@color/app_color"
        app:tl_textUnselectColor="#000000"
        tl:tl_indicator_style="NORMAL"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </com.flyco.tablayout.SlidingTabLayout>
</RelativeLayout>
