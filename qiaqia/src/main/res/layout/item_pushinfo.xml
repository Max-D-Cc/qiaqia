<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/round_edittext"
        >
        <TextView
            android:id="@+id/item_push_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/textgray"
            android:text="2016-09-09 18:39:14"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="35dp"
            />
        <TextView
            android:id="@+id/item_push_content"
            android:layout_below="@+id/item_push_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/textgray"
            android:text="消息详情：恰恰送你一份优惠券大礼包"
            android:layout_marginRight="30dp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_below="@+id/item_push_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/blue_btn_bg_color"
            android:text="点击查看详情"
            android:layout_marginRight="30dp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/app_bg"/>
</LinearLayout>
